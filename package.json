{
  "name": "qltc",
  "version": "1.0.0",
  "description": "Backend for personal finance management app",
  "main": "app.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev-simple": "nodemon server_simple.js",
    "test": "npx jest --coverage --detectOpenHandles",
    "test:basic": "npx jest tests/basic.test.js",
    "test:auth": "npx jest tests/auth.test.js",
    "test:watch": "npx jest --watch",
    "test:debug": "npx jest --verbose --no-cache",
    "test:api": "node scripts/test-api.js",
    "test:load": "artillery run tests/load-test.yml",
    "test:postman": "newman run tests/postman-collection.json -e tests/postman-environment.json",
    "test:all": "npm run test && npm run test:api && npm run test:load",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v --remove-orphans",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate-rollback.js",
    "seed": "node scripts/seed.js",
    "seed:dev": "NODE_ENV=development node scripts/seed.js",
    "seed:prod": "NODE_ENV=production node scripts/seed.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js",
    "logs": "pm2 logs",
    "logs:error": "pm2 logs --err",
    "docs": "swagger-jsdoc -d config/swagger.js -o swagger.json && swagger-ui-serve swagger.json",
    "docs:generate": "node scripts/generate-docs.js",
    "health": "node scripts/health-check.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "precommit": "npm run lint:fix && npm run format && npm run test:basic",
    "prepare": "husky install",
    "build": "echo 'No build step required for Node.js backend'",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "finance",
    "nodejs",
    "express",
    "mongodb",
    "redis",
    "swagger",
    "api",
    "backend",
    "jwt",
    "authentication"
  ],
  "dependencies": {
    "agenda": "^5.0.0",
    "archiver": "^7.0.1",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.0.0",
    "compression": "^1.8.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.18.1",
    "express-slow-down": "^2.0.3",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongoose": "^8.16.3",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.5",
    "pdfkit": "^0.13.0",
    "puppeteer": "^23.9.0",
    "qrcode": "^1.5.4",
    "redis": "^4.7.1",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "unzipper": "^0.12.3",
    "uuid": "^10.0.0",
    "validator": "^13.11.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.2.0",
    "0x": "^5.7.0",
    "artillery": "^2.0.0",
    "clinic": "^13.0.0",
    "codecov": "^3.8.3",
    "colors": "^1.4.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "faker": "^6.6.6",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.4",
    "lint-staged": "^15.2.10",
    "madge": "^8.0.0",
    "mongodb-memory-server": "^8.15.1",
    "newman": "^5.3.2",
    "nock": "^13.5.5",
    "nodemon": "^3.1.4",
    "npm-check-updates": "^17.1.11",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3",
    "redoc-cli": "^0.13.21",
    "sinon": "^19.0.2",
    "supertest": "^6.3.4",
    "swagger-ui-dist": "^5.17.14",
    "typedoc": "^0.26.11",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/QuocKiet-DA22TTD-110122100/NHOM8_QuanlyTaiChinh.git"
  },
  "author": "NHOM8 <team@financeapp.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/QuocKiet-DA22TTD-110122100/NHOM8_QuanlyTaiChinh/issues"
  },
  "homepage": "https://github.com/QuocKiet-DA22TTD-110122100/NHOM8_QuanlyTaiChinh#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:basic"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
